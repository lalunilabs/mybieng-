# Production Environment Variables for MyBeing Platform
# Copy this to .env.local and fill in your actual values

# Site Configuration
NEXT_PUBLIC_SITE_NAME=mybeing
NEXT_PUBLIC_DOMAIN=https://your-domain.com

# NextAuth Configuration
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-super-secret-nextauth-key-here-make-it-long-and-random

# Owner Access Control
# Only this email can access the admin panel
OWNER_EMAIL=your-email@example.com

# Database Configuration (Supabase recommended)
DATABASE_URL=postgresql://your-db-connection-string
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Email Service Configuration
# Recommended: SendGrid for reliable delivery
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@your-domain.com
FROM_NAME=MyBeing Self-Discovery

# AI Service Configuration
# OpenAI for quiz analysis and personalized insights
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=your-google-analytics-id

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here
