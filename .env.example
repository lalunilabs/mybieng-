# Example environment variables
NEXT_PUBLIC_SITE_NAME=mybeing

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-with-random-string

# Google OAuth (optional)
# Obtain from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Dev credentials fallback (optional)
# When set, you can sign in with any email and this password
DEV_CREDENTIALS_PASSWORD=devpass

# Owner gating
# Only this email can access /admin
OWNER_EMAIL=you@example.com

# Email Service Configuration
# Choose one: sendgrid, postmark, console (for development)
EMAIL_PROVIDER=console
SENDGRID_API_KEY=SG.your_sendgrid_api_key
POSTMARK_API_KEY=your_postmark_api_key
EMAIL_FROM=noreply@mybeing.com

# AI Service Configuration
# OpenAI API for quiz analysis and chat
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Optional: Google Gemini for image/text features
GEMINI_API_KEY=
NEXT_PUBLIC_USE_GEN_IMAGES=false

# Alternative: Claude API
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Unsubscribe token secret for email links
UNSUBSCRIBE_SECRET=replace-with-strong-random-string

# Encryption Keys (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=replace-with-64-character-hex-string-for-data-encryption
JWT_SECRET=replace-with-64-character-hex-string-for-jwt-signing

# Admin Authentication
ADMIN_PASSWORD=replace-with-strong-admin-password
ADMIN_JWT_SECRET=replace-with-strong-random-string-for-admin-jwt
ADMIN_SESSION_TIMEOUT=86400

# Production Domain
NEXT_PUBLIC_DOMAIN=https://mybeing.com

# Payment Processing - Stripe
# Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID=price_your_premium_monthly_price_id
NEXT_PUBLIC_URL=http://localhost:3000

# Database (Production)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_STORAGE_BUCKET=uploads

# Allow Next/Image to load Supabase Storage images
# Comma-separated list of remote image hosts
# Example: IMAGE_REMOTE_HOSTS=your-project.supabase.co,res.cloudinary.com
IMAGE_REMOTE_HOSTS=your-project.supabase.co

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Optional: Upstash (Global Edge rate limiting)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
