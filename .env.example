# Example environment variables
NEXT_PUBLIC_SITE_NAME=mybeing

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-with-random-string

# Google OAuth (optional)
# Obtain from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Dev credentials fallback (optional)
# When set, you can sign in with any email and this password
DEV_CREDENTIALS_PASSWORD=devpass

# Owner gating
# Only this email can access /admin
OWNER_EMAIL=you@example.com

# Email Service Configuration
# Choose one: sendgrid, mailgun, ses
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your_email_api_key_here
FROM_EMAIL=noreply@mybeing.com
FROM_NAME=MyBeing Self-Discovery

# AI Service Configuration
# OpenAI API for quiz analysis and chat
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Alternative: Claude API
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Production Domain
NEXT_PUBLIC_DOMAIN=https://mybeing.com

